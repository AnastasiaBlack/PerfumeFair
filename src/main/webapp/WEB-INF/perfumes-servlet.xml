<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd

		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <context:component-scan
            base-package="com.softserve.edu.dao"/>
    <context:component-scan
            base-package="com.softserve.edu.perspective.user"/>
    <context:component-scan
            base-package="com.softserve.edu.controller"/>
    <context:component-scan
            base-package="com.softserve.edu.validator"/>

    <context:component-scan
            base-package="com.softserve.edu.service"/>
    <import resource="appconfig-mvc.xml"/>

    <import resource="spring-security.xml"/>
    <import resource="appconfig-data.xml"/>



    <context:property-placeholder location="classpath:database.properties"/>

</beans>